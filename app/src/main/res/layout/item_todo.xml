<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ToDoModel"
            type="com.oglcnkrty.todo_app.model.TodoModel" />
        <variable
            name="TodoClickListener"
            type="com.oglcnkrty.todo_app.base.listener.TodoItemClickListener" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->TodoClickListener.onTodoItemClickListener(ToDoModel.id)}"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{ToDoModel.title}"
                app:layout_constraintEnd_toStartOf="@+id/cb_todo"
                app:layout_constraintStart_toEndOf="@+id/iv_priority"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="My To-Do Title" />

            <TextView
                android:id="@+id/tv_description"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@{ToDoModel.description}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cb_todo"
                app:layout_constraintStart_toStartOf="@+id/iv_priority"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                tools:text="@tools:sample/lorem/random" />

            <CheckBox
                android:id="@+id/cb_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_description"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{()->TodoClickListener.onTodoChecked(ToDoModel)"
                app:layout_constraintTop_toTopOf="@+id/tv_title" />

            <ImageView
                android:id="@+id/iv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:setPriority="@{ToDoModel.priority}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title"
                app:srcCompat="@drawable/baseline_circle_24"
                tools:tint="@color/material_dynamic_primary0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>